<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WriteActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:background="@android:color/white">

            //최 상단
            <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_arrow_left"
                    android:layout_gravity="left|center"/>

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시글 작성"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            <ImageButton
                    android:id="@+id/Btn_Share"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_btn_write"
                    android:layout_gravity="right|center"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/style_border_line">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="2dp"
                        android:id="@+id/img_show"/>

                <ImageButton
                        android:id="@+id/imageBtn_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/img_pic_add"/>
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">

            <EditText
                    android:id="@+id/edit_oneLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custome_edit_text"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:padding="10dp"
                    android:hint="한줄평을 작성해주세요."/>

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
