<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
    <ImageView
            android:id="@+id/icoCustomDialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_account_box_black_24dp"/>
    <TextView
            android:id="@+id/txtDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/icoCustomDialog"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="비밀번호를 찾기 위해서 아래의 정보를 입력 해주세요."
            android:textColor="@color/colorTextNormal"
            android:textStyle="normal"/>
    <EditText
            android:id="@+id/txtDialogFindID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/icoCustomDialog"
            android:drawableStart="@drawable/ic_username"
            android:drawableLeft="@drawable/ic_username"
            android:background="@drawable/custome_edit_text"
            android:padding="10dp"
            android:inputType="text"
            android:hint="아이디"
            android:ems="10"/>
    <EditText
            android:id="@+id/txtDialogFindEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtDialogFindID"
            android:drawableStart="@drawable/ic_email"
            android:drawableLeft="@drawable/ic_email"
            android:background="@drawable/custome_edit_text"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:hint="이메일 주소"
            android:ems="20"/>
</RelativeLayout>