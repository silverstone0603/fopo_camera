<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".AuthActivity">
    <!-- tools:showIn="@layout/app_bar_main" -->

    <RelativeLayout
            android:id="@+id/registerLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/idInput"
                android:layout_centerHorizontal="true"
                android:hint="아이디"
                android:inputType="text"
                android:layout_marginTop="151dp" />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/passwordInput"
                android:layout_centerHorizontal="true"
                android:hint="비밀번호"
                android:layout_below="@+id/idInput"
                android:inputType="textPassword"/>

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/passwordCheeckInput"
                android:layout_centerHorizontal="true"
                android:hint="비밀번호 확인"
                android:layout_below="@+id/passwordInput"
                android:inputType="textPassword"/>

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/nickName"
                android:layout_centerHorizontal="true"
                android:hint="닉네임"
                android:layout_below="@+id/passwordCheeckInput"
                android:inputType="text"/>

        <TextView
                android:id="@+id/sexText"
                android:text="성별"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_gravity="left"
                android:layout_below="@+id/nickName"/>

        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sexText"
                android:orientation="horizontal">

            <RadioButton
                    android:id="@+id/radio_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"/>

            <RadioButton
                    android:id="@+id/radio_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"/>

        </RadioGroup>

        <Button
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="회원가입"
                android:id="@+id/signUpButton"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/radioGroup"
                android:layout_centerHorizontal="true"
                android:background="@drawable/style_fopo_roundbtn"
                android:textColor="@android:color/white"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>


