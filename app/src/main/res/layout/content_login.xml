<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:gravity="center"
        tools:context=".AuthActivity">
    <!-- tools:showIn="@layout/app_bar_main" -->

    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/editUserID"
            android:layout_centerHorizontal="true"
            android:hint="아이디"
            android:inputType="text"
            android:background="@drawable/custome_edit_text"
            android:drawableStart="@drawable/ic_username"
            android:drawableLeft="@drawable/ic_username"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/editPassword"
            android:layout_centerHorizontal="true"
            android:hint="비밀번호"
            android:layout_below="@+id/editUserID"
            android:drawableStart="@drawable/ic_password"
            android:drawableLeft="@drawable/ic_password"
            android:background="@drawable/custome_edit_text"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="로그인"
            android:id="@+id/btnLogin"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/passwordInput"
            android:layout_toLeftOf="@+id/registerButon"
            android:background="@drawable/style_normal_button"
            android:textColor="@drawable/style_textcolor_darkpink"
            style="?android:attr/borderlessButtonStyle"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="0dp"
            android:layout_gravity="top"
            android:gravity="center">
        <TextView
                android:id="@+id/txtFindPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="비밀번호 찾기"/>
        <View
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/Divider"/>
        <TextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:textSize="16sp"
                android:text="회원가입"/>
    </LinearLayout>
</LinearLayout>